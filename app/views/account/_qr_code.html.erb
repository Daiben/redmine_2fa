<% @qr = RQRCode::QRCode.new(@user.provisioning_uri('redmine_2fa'), :size => 7, :level => :h ) %>
<table class="qr">
  <caption>Google Authenticator</caption>
  <% @qr.modules.each_index do |x| %>
    <tr>
      <% @qr.modules.each_index do |y| %>
        <% if @qr.dark?(x, y) %>
          <td class="black"/>
        <% else %>
          <td class="white"/>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
